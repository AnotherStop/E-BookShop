<?xml version="1.0" encoding="UTF-8"?>
<!--
<Context antiJARLocking="true" path="/ebookshop"/>
-->
<Context path="/ebookshop" reloadable="true">
  <!-- 
    maxActive: Maximum number of dB connections in pool. Set to -1 for no limit.
    maxIdle: Maximum number of idle dB connections to retain in pool. Set to -1 for no limit.
    maxWait: Maximum milliseconds to wait for a dB connection to become available
             Set to -1 to wait indefinitely.
  -->
  <Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" maxActive="10" maxIdle="3" maxWait="100" name="jdbc/mysql_ebookshop" password="root" removeAbandoned="true" type="javax.sql.DataSource" url="jdbc:mysql://localhost:3306/ebookshop" username="root"/>
</Context>
